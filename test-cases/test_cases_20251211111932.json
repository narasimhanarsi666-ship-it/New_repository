from selenium import webdriver
from selenium.webdriver.common.by import By
from selenium.webdriver.common.keys import Keys
from selenium.webdriver.support.ui import WebDriverWait
from selenium.webdriver.support import expected_conditions as EC
from selenium.common.exceptions import NoSuchElementException, TimeoutException
import time

def login_to_application(url, username, password):
    """
    Automates the login process for a web application.

    Parameters:
        url (str): The URL of the login page.
        username (str): The username for login.
        password (str): The password for login.
    """
    # Initialize WebDriver (Ensure the WebDriver executable is in your PATH)
    driver = webdriver.Chrome()

    try:
        # Navigate to the login page
        driver.get(url)

        # Wait for the username field to be present
        wait = WebDriverWait(driver, 10)
        username_field = wait.until(EC.presence_of_element_located((By.NAME, "username")))
        password_field = driver.find_element(By.NAME, "password")

        # Enter credentials
        username_field.send_keys(username)
        password_field.send_keys(password)

        # Click the login button
        login_button = driver.find_element(By.NAME, "login")
        login_button.click()

        # Verify successful login by checking for a specific element or text
        wait.until(EC.presence_of_element_located((By.ID, "welcome-message")))
        print("Login successful!")

    except NoSuchElementException as e:
        print(f"Error: Element not found - {e}")
    except TimeoutException as e:
        print(f"Error: Timeout while waiting for an element - {e}")
    except Exception as e:
        print(f"An unexpected error occurred: {e}")
    finally:
        # Close the browser session
        driver.quit()

# Example usage
if __name__ == "__main__":
    # Replace with actual URL, username, and password
    login_url = "https://example.com/login"
    user_name = "your_username"
    user_password = "your_password"

    login_to_application(login_url, user_name, user_password)